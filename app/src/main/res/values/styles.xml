<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicatorStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="CustomCirclePageIndicatorStyle">
        <item name="radius">4dp</item>
        <item name="fillColor">@color/purple</item>
        <item name="pageColor">@color/purpleLight</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
